.item(data-price=(seller.buyout.trim() !== '') ? seller.buyout : 'unpriced', data-ign=seller.ign, data-whisper=seller.whisper)
  table
    tr
      td.icon!=createSocket(sockets)
        img.icon(src=icon, alt=title)
      td.mods
        table
          tr
            td
              | #{title}
              ul
                if mods.implicit.trim() != ''
                  li.implicit #{mods.implicit}
                each explicit in mods.explicits
                  li.explixit #{explicit}
                each craft in mods.crafted
                  li.crafted #{craft}
